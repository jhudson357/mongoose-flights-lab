<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />

<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" placeholder="American, Southwest, or United" name="airline" id="airline-input">
    <!-- <label for="airline-select">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select> -->
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-no-input">Flight Number:</label>
    <input type="number" name="flightNo" id="flight-no-input">
    <label for="date-input">Departure Date:</label>
    <input type="datetime-local" name="departs" id="date-input" value="<%= departsDate %>">
    <button type="submit">Create Flight</button>
    
  </form>
</main>

<%- include('../partials/footer') %>