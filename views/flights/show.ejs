<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>





<main>
  <h1>Flight <%= flight.flightNo %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure Date and Time: </div>
    <div><%= flight.departs %></div>
    <div style="font-weight: bold;"><a href="/flights/<%= flight._id %>/edit">Edit Flight</a></div>
    <div><a href="/flights">All Flights</a></div>
  </section>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"  
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-input">Seat:</label>
    <input name="seat" id="seat-input" required pattern="[A-F][1-9]\d?" placeholder="A1 - F99">
    <label for="price-input">Price ($):</label>
    <input name="price" type="number">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(ticket => { %>
          <tr>
            <td><%= ticket.seat %> </td>
            <td>$<%= ticket.price %> </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Available</h3>
  <% } %>   
</main>

<%- include('../partials/footer') %> 

