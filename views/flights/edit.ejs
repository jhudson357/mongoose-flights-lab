<h1>EDIT FLIGHT</h1>
<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />

<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" value="<%= flight.airline %>" placeholder="American, Southwest, or United" name="airline" id="airline-input">
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-no-input">Flight Number:</label>
    <input type="text" name="flightNo" value="<%= flight.flightNo %>" id="flight-no-input">
    <label for="date-input">Departure Date:</label>
    <input type="datetime-local" name="departs" value="<%= flight.departs %>" id="date-input">
    <button type="submit">Update Flight</button>
  </form>
</main>

<%- include('../partials/footer') %>